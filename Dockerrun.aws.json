{
   "AWSEBDockerrunVersion": 2,
   "containerDefinitions": [
      {
          "name": "client",
          "image": "naveen108/multi-client",
          "hostname": "client",
          "essential": false
      },

      {
          "name": "server",
          "image": "naveen108/multi-server",
          "hostname": "api",
          "essential": false
      },

      {
          "name": "worker",
          "image": "naveen108/multi-worker",
          "hostname": "worker",
          "essential": false
      },

      {
          "name": "nginx",
          "image": "naveen108/multi-nginx",
          "hostname": "nginx",
          "essential": true,
          "portMappings": [
              {
                  "hostport": 80,
                  "containerport": 80
              }
          ],
          "links": ["client","server"]
      }


   ]


}